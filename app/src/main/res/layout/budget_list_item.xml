<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable name="budget" type="com.example.steams.a10bands.components.budgets.viewModels.BudgetListItemViewModel"></variable>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >

        <TextView
            android:text="@{budget.name}"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/budget_name" />

        <TextView
            android:text="@{budget.value + ' ' +'/' + ' ' + budget.refreshValue}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/budget_name"
            android:layout_alignParentStart="true"
            style="@style/smallFundsValue"
            android:id="@+id/budget_current_value" />

        <Button
            android:id="@+id/budget_make_transaction"
            android:text="$"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            style="@android:style/Widget.Material.Button.Borderless.Small"
            />

    </RelativeLayout>
</layout>
